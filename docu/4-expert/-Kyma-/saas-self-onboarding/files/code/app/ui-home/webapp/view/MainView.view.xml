<mvc:View 
    controllerName="sap.susaas.ui.home.controller.MainView" 
    xmlns:core="sap.ui.core"
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true">
    <Page id="page" showHeader="false" class="susaasBackground">
        <content>
            <VBox alignContent="Center" justifyContent="Center" alignItems="Center" width="100%" height="100%">
                <Title level="H1" text="Sustainable SaaS" textAlign="Center" titleStyle="H1" class="sapUiMediumMarginBottom susaasHomeTitle" wrapping="true"/>
                <Button text="Login or Register" press="onPressLoginRegister"/>
            </VBox>
        </content>
    </Page>
</mvc:View>
